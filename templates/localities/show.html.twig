{% extends 'base.html.twig' %}

{% block title %}Localities{% endblock %}

{% block body %}
    <h1>Localities</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ locality.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ locality.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ locality.zipcode }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ locality.adress }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ locality.createdAt ? locality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ locality.updatedAt ? locality.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_localities_index') }}">back to list</a>

    <a href="{{ path('app_localities_edit', {'id': locality.id}) }}">edit</a>

    {{ include('localities/_delete_form.html.twig') }}
{% endblock %}
