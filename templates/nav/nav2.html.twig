{% block nav %}
	<nav class="bg-blue-100 border-gray-200 dark:bg-blue-300">
		<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<a href="{{ path('app_main') }}" class="flex items-center space-x-3 rtl:space-x-reverse">
				<img src="{{ asset('img/LogoHeyVoisinNoBG.png') }}" class="h-12 md:h-16" alt="Hey, voisin ! Logo"/>
				<img src="{{ asset('img/TitleHeyVoisinNoBG.png') }}" class="h-8 md:h-12" alt="Nom du site Hey,voisin !">
				<span class="hidden sm:block self-center text-2xl font-semibold text-blue-900 whitespace-nowrap dark:text-white">Le Back-Office</span>
			</a>
			{% if is_granted("IS_AUTHENTICATED_FULLY") %}
				<div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
					<button type="button" class="flex text-sm bg-white rounded-full md:me-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" id="user-menu-button" aria-expanded="false" data-dropdown-toggle="user-dropdown" data-dropdown-placement="bottom">
						<span class="sr-only">Open user menu</span>
						<img class="w-12 h-12 md:w-16 md:h-16 rounded-full" src="{{ asset('img/Tux.svg.png') }}" alt="User picture">
					</button>
					<!-- Dropdown menu -->
					<div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600" id="user-dropdown">
						<div class="px-4 py-3">
							<span class="block text-sm text-gray-900 text-center dark:text-white">
								{{ app.user.alias }}
							</span>
							<span class="block text-sm  text-gray-500 text-center truncate dark:text-gray-400">
								{{ app.user.email }}
							</span>
						</div>
						<ul class="py-2" aria-labelledby="user-menu-button">
							<li class="flex justify-center">
								<button href="{{ path('app_logout') }}" class="btn btn-sm bg-red-500 block m-2 py-2 px-4 text-sm text-center rounded-lg text-white font-bold hover:bg-red-200
																																																																																																																																																																																																																			hover:text-red-900 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white">
									Déconnexion
								</button>
							</li>
						</ul>
					</div>
					<button data-collapse-toggle="navbar-user" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-user" aria-expanded="false">
						<span class="sr-only">Open main menu</span>
						<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 17 14">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
						</svg>
					</button>
				</div>
				<div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-user">
					<ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 bg-blue-100">
						<li>
							<div class="flex items-center flex-col">
								<i class="bi bi-house-heart"></i>
								<a href="{{ path('app_main') }}" class="block py-2 px-3 text-blue-900 hover:text-blue-700 rounded md:hover:text-white md:bg-blue-300 md:text-blue-900 md:p-0 md:dark:text-blue-500" aria-current="page">Accueil</a>
							</div>
						</li>
						<li>
							<div class="flex items-center flex-col">
								<img src="{{ asset('img/publication.png') }}" alt="Logo de publications">
								<a href="{{ path('app_post_index') }}" class="block py-2 px-3 text-blue-900 rounded hover:bg-blue-700 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-blue-700 md:dark:hover:text-blue-500 dark:hover:bg-blue-700 dark:hover:text-blue-700 md:dark:hover:bg-transparent dark:border-blue-700">Publications</a>
							</div>
						</li>
						<li>
							<div class="flex items-center flex-col">
								<img src="{{ asset('img/team.png') }}" alt="Logo d'utilisateur">
								<a href="{{ path('app_user_index') }}" class="block py-2 px-3 text-blue-900 rounded hover:bg-blue-700 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-blue-700 md:dark:hover:text-blue-500 dark:hover:bg-blue-700 dark:hover:text-blue-700 md:dark:hover:bg-transparent dark:border-blue-700">Utilisateurs</a>
							</div>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li>
								<div class="flex items-center flex-col">
									<img src="{{ asset('img/categories.png') }}" alt="Logo de catégories" height="32" width="32">
									<a href="{{ path('app_category_index') }}" class="block py-2 px-3 text-blue-900 rounded hover:bg-blue-700 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-blue-700 md:dark:hover:text-blue-500 dark:hover:bg-blue-700 dark:hover:text-blue-700 md:dark:hover:bg-transparent dark:border-blue-700">Catégories</a>
								</div>
							</li>
							<li>
								<div class="flex items-center flex-col">
									<img src="{{ asset('img/gratte-ciel.png') }}" alt="Logo de ville" height="32" width="32">
									<a href="{{ path('app_city_index') }}" class="block py-2 px-3 text-blue-900 rounded hover:bg-blue-700 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-blue-700 md:dark:hover:text-blue-500 dark:hover:bg-blue-700 dark:hover:text-blue-700 md:dark:hover:bg-transparent dark:border-blue-700">Villes</a>
								</div>
							</li>
							<li>
								<div class="flex items-center flex-col">
									<img src="{{ asset('img/user-interface.png') }}" alt="Logo d'utilisateur" height="32" width="32">
									<a href="{{ path('app_avatar_index') }}" class="block py-2 px-3 text-blue-900 rounded hover:bg-blue-700 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-blue-700 md:dark:hover:text-blue-500 dark:hover:bg-blue-700 dark:hover:text-blue-700 md:dark:hover:bg-transparent dark:border-blue-700">Avatars</a>
								</div>
							</li>
							{# <li>
																																																																																																																																																																																																																																																																																																						                                    <a href="{{ path('app_comment_index') }}" class="block py-2 px-3 text-white rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Commentaires</a>
																																																																																																																																																																																																																																																																																																													</li> #}
						{% endif %}
					</ul>
				{% endif %}
			</div>
		</div>
	</nav>
{% endblock %}
