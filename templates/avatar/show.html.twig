{% extends 'base.html.twig' %}

{% block title %}Avatar #
	{{ avatar.id }}
{% endblock %}

{% block body %}
	<div class="container col-9">
		<h1>Avatar
            <span class="badge rounded-pill text-bg-success">{{ avatar.id }}</span>
		</h1>

		<table class="table table-borderless table-striped table-sm">
			<tbody>
				<th>Url</th>
				<td>{{ avatar.url }}</td>
			</tbody>
		</tr>
		<tr>
			<th>Nom</th>
			<td>{{ avatar.name }}</td>
		</tr>
	</tbody>
</table>
<div class="dropdown">
	<button class="btn btn-outline-primary m-1 btn-sm rounded-pill dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
		Actions
	</button>
	<ul class="dropdown-menu rounded-4 p-1 text-center">
		<li>
			<a class="dropdown-item rounded-pill m-1 text-center" href="{{ path('app_avatar_edit', {'id': avatar.id}) }}">Modifier</a>
		</li>
		{{ include('avatar/_delete_form.html.twig') }}
	</ul>
</div>
<a href="{{ path('app_avatar_index') }}" class="btn btn-secondary m-1 btn-sm rounded-pill">Retour</a></div>{% endblock %}
