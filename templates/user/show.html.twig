{% extends 'base.html.twig' %}

{% block title %}Utilisateur #{{ user.id }}
{% endblock %}

{% block body %}
	<div class="container col-9">
		<h1>Utilisateur #
			{{ user.id }}
		</h1>

		<table class="table table-borderless table-striped table-sm">
			<tbody>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Rôles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Alias</th>
					<td>{{ user.alias }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Adresse</th>
					<td>{{ user.address }}</td>
				</tr>
                <tr>
                    <th>Code postal</th>
                    <td>{{ user.city().zipcode }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ user.city().name }}</td>
                </tr>
			</tbody>
		</table>
		<div class="dropdown">
            <button class="btn btn-outline-primary m-1 btn-sm rounded-pill dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
            </button>
            <ul class="dropdown-menu rounded-4 p-1">
                <li><a class="dropdown-item rounded-pill" href="{{ path('app_user_edit', {'id': user.id}) }}" >Modifier</a></li>
                <li><a class="dropdown-item bg-danger rounded-pill text-light" href="{{ path('app_user_delete', {'id': user.id}) }}">Supprimer</a></li>
            </ul>
        </div>
		<a href="{{ path('app_user_index') }}" class="btn btn-secondary m-1 btn-sm rounded-pill">Retour</a>
	</div>
{% endblock %}
