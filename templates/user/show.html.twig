{% extends 'base.html.twig' %}

{% block title %}Utilisateur #
	{{ user.id }}
{% endblock %}

{% block body %}
	<div class="container col-6">
		<h1 class="mt-5 bg-secondary bg-gradient rounded-top-5 p-3 text-light text-center mb-0">Utilisateur
			<span class="badge rounded-pill text-bg-success">{{ user.id }}</span>
		</h1>

		<table class="table table-borderless table-striped table-sm shadow text-center">
			<tbody>
				<tr>
					<th class="table-success">Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th class="table-success text-center">Rôles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th class="table-success">Alias</th>
					<td>{{ user.alias }}</td>
				</tr>
				<tr>
					<th class="table-success">Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th class="table-success">Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th class="table-success">Adresse</th>
					<td>{{ user.address }}</td>
				</tr>
                <tr>
                    <th class="table-success">Code postal</th>
                    <td>{{ user.city().zipcode }}</td>
                </tr>
                <tr>
                    <th class="table-success">Ville</th>
                    <td>{{ user.city().name }}</td>
                </tr>
			</tbody>
		</table>
		<div class="dropdown">
            <button class="btn btn-outline-primary m-1 btn-sm rounded-pill dropdown-toggle fw-bold" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
            </button>
            <ul class="dropdown-menu rounded-4 p-1">
                <li><a class="dropdown-item rounded-pill" href="{{ path('app_user_edit', {'id': user.id}) }}" >Modifier</a></li>
				{{ include('user/_delete_form.html.twig') }}
            </ul>
        </div>
		<a href="{{ path('app_user_index') }}" class="btn btn-secondary m-1 btn-sm rounded-pill">Retour</a>
	</div>
{% endblock %}
