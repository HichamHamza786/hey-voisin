{% extends 'base.html.twig' %}

{% block title %}Publication #{{ post.id }}{% endblock %}

{% block body %}
<div class="container col-9">
    <h1>Publication <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning m-1 btn-sm rounded-pill">Modifier</a></h1>

    <table class="table table-bordered table-striped table-sm">
        <tbody>
            <tr>
                <th class="table-dark">Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th class="table-dark">Titre</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th class="table-dark">Résumé</th>
                <td>{{ post.resume }}</td>
            </tr>
            <tr>
                <th class="table-dark">Actif</th>
                <td>{{ post.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th class="table-dark">Offre</th>
                <td>{{ post.isOffer ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th class="table-dark">Publié le</th>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="table-dark">Mis à jour le</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('post/_delete_form.html.twig') }}
    <a href="{{ path('app_post_index') }}" class="btn btn-primary m-1 btn-sm rounded-pill">Retour</a>
</div>
{% endblock %}
