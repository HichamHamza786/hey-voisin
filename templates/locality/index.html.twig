{% extends 'base.html.twig' %}

{% block title %}Localities index{% endblock %}

{% block body %}
    <h1>Localities index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Zipcode</th>
                <th>Adress</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for locality in locality %}
            <tr>
                <td>{{ locality.id }}</td>
                <td>{{ locality.city }}</td>
                <td>{{ locality.zipcode }}</td>
                <td>{{ locality.adress }}</td>
                <td>{{ locality.createdAt ? locality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ locality.updatedAt ? locality.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_locality_show', {'id': locality.id}) }}">show</a>
                    <a href="{{ path('app_locality_edit', {'id': locality.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_locality_new') }}">Create new</a>
{% endblock %}
