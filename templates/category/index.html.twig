{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="container col-9">
    
    <h1 class="mt-5">Liste des catégories <a href="{{ path('app_category_new') }}" class="btn btn-success btn-sm rounded-pill">Ajouter une catégorie</a></h1>

    <table class="table table-bordered table-striped table-sm">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in pagination %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary m-1 btn-sm rounded-pill">Voir</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning m-1 btn-sm rounded-pill">Modifier</a>
                    <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger m-1 btn-sm rounded-pill">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
