{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.id }}{% endblock %}

{% block body %}
<div class="container col-9">
    <h1>Catégorie <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning m-1 btn-sm rounded-pill">Modifier</a></h1>

    <table class="table table-bordered table-striped table-sm">
        <tbody>
            <tr>
                <th class="table-dark">Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th class="table-dark">Catégorie</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('category/_delete_form.html.twig') }}
    <a href="{{ path('app_category_index') }}" class="btn btn-primary m-1 btn-sm rounded-pill">Retour</a>
</div>
{% endblock %}
